<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6"> <!-- Adjust the column width as needed -->
      <div aria-live="polite" aria-atomic="true" class="position-relative" style="height: 90px; overflow: hidden;">
        <% if flash.any? %>
          <% flash.each do |message_type, message| %>
            <div class="toast-container position-absolute top-0 start-50 translate-middle-x p-3">
              <div class="toast align-items-center text-white bg-<%= message_type == 'notice' ? 'primary' : 'danger' %>" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                  <div class="toast-body">
                    <%= message %>
                  </div>
                  <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
